@import "nib"
@import "bootstrap.min.css"
@import "animations.css"

// ----------------------------------------------------------------------------
// Styles
// ----------------------------------------------------------------------------

html, body
  margin 0
  padding 0

.app, .site-info
  padding-top: 20px

.buttons
  margin-top: 10px

.current-records__header
  margin-top: 40px

.found-record
  padding-top: 20px
  padding-bottom: 40px
  background-color: #428BCA
  border-left: 6px solid #18558A
  .found-record__title, .found-record__expiration
    color: #FFF
  .found-record__expiration
    padding-left: 20px;

.clear-record
  cursor: pointer

@media (max-width:500px)
  .submit-record
    float: none;
    margin-top: 5px;
    width: 100%;
  .expiration-time-buttons 
    width: 100%
    .btn-large
      width 25%
      padding-left 5px
      padding-right 5px

@media (max-width:600px)
  .record a
    overflow: hidden;
    max-width: 200px;
    display: inline-block;
    text-overflow: ellipsis;